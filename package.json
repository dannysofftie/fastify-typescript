{
    "name": "sams-project-management",
    "version": "0.0.1",
    "description": "Project management application, for road construction works",
    "main": "dist/index.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --no-notify src/index.ts",
        "start": "npm run clean && npm run build && node dist/index.js",
        "build": "npm run clean && tsc -b",
        "clean": "tsc -b --clean",
        "debug": "node --inspect -r ts-node/register src/index.ts",
        "docker-build": "npm run docker-stop && docker-compose build && docker rmi -f $(docker images --quiet --filter 'dangling=true')",
        "docker-start": "docker-compose up",
        "docker-stop": "docker-compose down",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "npm run lint -- --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@bitbucket.org:oratechsolutions/sams-app-server.git"
    },
    "keywords": [
        "sams",
        "project-management",
        "road-construction"
    ],
    "author": "Danny Sofftie",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://bitbucket.org/oratechsolutions/sams-app-server/issues"
    },
    "homepage": "https://bitbucket.org/oratechsolutions/sams-app-server#readme",
    "dependencies": {
        "axios": "^0.19.0",
        "bcrypt": "^3.0.6",
        "dotenv": "^8.0.0",
        "ejs": "^2.6.1",
        "fastify": "^2.4.1",
        "fastify-cookie": "^3.0.2",
        "fastify-cors": "^1.0.1",
        "fastify-favicon": "^0.3.2",
        "fastify-jwt": "^0.10.0",
        "fastify-plugin": "^1.6.0",
        "fastify-static": "^1.1.0",
        "fastify-swagger": "^2.4.0",
        "html-minifier": "^4.0.0",
        "mongoose": "^5.5.11",
        "nodemailer": "^6.1.0",
        "point-of-view": "^2.3.0",
        "typescript": "^3.5.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/ejs": "^2.6.3",
        "@types/html-minifier": "^3.5.3",
        "@types/mongoose": "^5.5.3",
        "@types/node": "^12.0.4",
        "@types/nodemailer": "^6.1.0",
        "@typescript-eslint/eslint-plugin": "^1.9.0",
        "@typescript-eslint/parser": "^1.9.0",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^4.3.0",
        "ts-node-dev": "^1.0.0-pre.39"
    },
    "engines": {
        "node": "12.2.0"
    }
}
